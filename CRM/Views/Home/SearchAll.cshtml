@{
}
@model List<CRM.Models.SearchResult>

<div class="container mt-4">

    <h3 class="mb-4 text-primary">
        <i class="bi bi-search me-2"></i> Search Results
    </h3>

    @if (!Model.Any())
    {
        <div class="alert alert-info">
            No results found.
        </div>
    }
    else
    {
        <table class="table table-hover table-striped">
            <thead class="table-light">
                <tr>
                    <th>Type</th>
                    <th>Name</th>
                    <th>Email</th>
                    <th>Phone</th>
                    <th>Extra</th>
                </tr>
            </thead>

            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>@item.Type</td>
                        <td>@item.Name</td>
                        <td>@item.Email</td>
                        <td>@item.Phone</td>
                        <td>@item.Extra</td>
                    </tr>
                }
            </tbody>
        </table>
    }

</div>

