@{
    ViewData["Title"] = "Welcome";
    Layout = null; // Still a standalone page
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - CRM System</title>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" />

    <style>
        /* FULL SCREEN BACKGROUND STYLES */
        body {
            height: 100vh;
            margin: 0;
            background: #101010; /* Base dark background */
            font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
            overflow: hidden;
            position: relative;
            display: flex;
            justify-content: center;
            align-items: center;
        }

            /* 🖼️ BACKGROUND IMAGE LAYER (New Addition) */
            body::before {
                content: '';
                position: fixed; /* Use fixed for full viewport coverage */
                top: 0;
                left: 0;
                width: 100%;
                height: 100%;
                background-image: url('https://images.unsplash.com/photo-1551288049-bebda4e38f71');
                background-size: cover; /* Cover the entire area */
                background-position: center;
                background-repeat: no-repeat;
                filter: brightness(0.7) blur(1.5px); /* Darken and slightly blur the image for contrast */
                z-index: -10; /* Ensure it is the furthest back layer */
            }

        /* Animated Background Elements */
        .bg-overlay {
            position: absolute;
            inset: 0;
            /* Using a linear gradient over the image to add a blue tint and depth */
            background: linear-gradient(135deg, rgba(30, 58, 138, 0.75), rgba(37, 99, 235, 0.55), rgba(79, 70, 229, 0.75));
            animation: gradientFlow 10s infinite alternate ease-in-out;
            z-index: -5;
        }

        .shape {
            position: absolute;
            border-radius: 50%;
            filter: blur(70px);
            opacity: 0.12;
            background: #ffffff;
            z-index: -4; /* Z-index set higher than overlay */
        }

        .shape1 {
            width: 380px;
            height: 380px;
            top: 8%;
            left: 7%;
            animation: float1 6s infinite ease-in-out;
        }

        .shape2 {
            width: 450px;
            height: 450px;
            bottom: 8%;
            right: 7%;
            animation: float2 7s infinite ease-in-out;
        }

        /* CENTER CARD STYLES */
        .main-card {
            width: 550px;
            max-width: 90%;
            padding: 45px;
            background: rgba(255,255,255,0.20); /* Glass effect */
            border: 1px solid rgba(255,255,255,0.35);
            backdrop-filter: blur(18px);
            border-radius: 25px;
            text-align: center;
            z-index: 10;
            box-shadow: 0 20px 50px rgba(0,0,0,0.25);
            animation: cardUp 1.2s ease;
        }

        .logo-icon {
            font-size: 60px;
            color: white;
            margin-bottom: 18px;
            line-height: 1;
            display: inline-block;
        }

        h2 {
            font-weight: 800;
            color: white;
            margin-bottom: 10px;
        }

        .subtitle {
            color: #e5e7eb;
            font-size: 1.1rem;
            margin-bottom: 45px;
        }

        .btn-custom {
            padding: 14px;
            margin: 0 10px;
            font-size: 18px;
            border-radius: 12px;
            font-weight: 600;
            transition: 0.25s ease;
            width: 180px;
        }

            .btn-custom:hover {
                transform: translateY(-3px);
                box-shadow: 0 12px 30px rgba(0,0,0,0.25);
            }

        /* Animations */
        @@keyframes cardUp {
            0% {
                opacity: 0;
                transform: translateY(40px);
            }

            100% {
                opacity: 1;
                transform: translateY(0);
            }
        }

        @@keyframes gradientFlow {
            0% {
                background-position: 0% 0%;
            }

            100% {
                background-position: 100% 100%;
            }
        }

        @@keyframes float1 {
            0%, 100% {
                transform: translateY(0);
            }

            50% {
                transform: translateY(-30px);
            }
        }

        @@keyframes float2 {
            0%, 100% {
                transform: translateY(0);
            }

            50% {
                transform: translateY(30px);
            }
        }
    </style>
</head>

<body>
    <div class="bg-overlay"></div>
    <div class="shape shape1"></div>
    <div class="shape shape2"></div>

    <div class="main-card">
        <div class="logo-icon">💻</div>
        <h2>Welcome to CRM System</h2>
        <p class="subtitle">Your smart platform for modern customer and employee management.</p>

        <div class="d-flex justify-content-center">
            <a href="/Account/Login" class="btn btn-light btn-custom">Login</a>
            <a href="/Account/Register" class="btn btn-dark btn-custom">Register</a>
        </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>

</body>
</html>