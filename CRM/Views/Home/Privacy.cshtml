@{
    ViewData["Title"] = "System Settings";
}

<div class="container-fluid py-4">
    <h1 class="fw-light mb-4 text-dark">
        <i class="bi bi-gear-fill me-2"></i> System Settings
    </h1>

    <div class="row g-4">
        <div class="col-lg-3">
            <div class="list-group shadow-sm">
                <a href="#" class="list-group-item list-group-item-action active" aria-current="true">
                    <i class="bi bi-person-lock me-2"></i> User & Privacy
                </a>
                <a href="#" class="list-group-item list-group-item-action text-muted disabled">
                    <i class="bi bi-bell me-2"></i> Notifications (Coming Soon)
                </a>
                <a href="#" class="list-group-item list-group-item-action text-muted disabled">
                    <i class="bi bi-shield-lock me-2"></i> Security (Coming Soon)
                </a>
            </div>
        </div>

        <div class="col-lg-9">
            <div class="card shadow-sm border-0 h-100">
                <div class="card-header bg-light border-bottom">
                    <h4 class="mb-0 text-secondary">User & Privacy Details</h4>
                </div>
                <div class="card-body p-4">
                    <p class="text-muted border-bottom pb-3">
                        This section displays your current session and role information within the CRM system.
                    </p>

                    <div class="row g-4">
                        <div class="col-md-6">
                            <div class="p-3 bg-light border-start border-4 border-primary rounded">
                                <p class="text-uppercase fw-bold text-primary mb-1">Your Role</p>
                                <h3 class="mb-0">
                                    <i class="bi bi-person-vcard me-2"></i>
                                    <strong>@User.FindFirst(System.Security.Claims.ClaimTypes.Role)?.Value</strong>
                                </h3>
                            </div>
                        </div>

                        <div class="col-md-6">
                            <div class="p-3 bg-light border-start border-4 border-success rounded">
                                <p class="text-uppercase fw-bold text-success mb-1">Your Email</p>
                                <h4 class="mb-0">
                                    <i class="bi bi-envelope me-2"></i>
                                    <strong>@User.FindFirst(System.Security.Claims.ClaimTypes.Email)?.Value</strong>
                                </h4>
                            </div>
                        </div>
                    </div>

                    <h5 class="mt-5 pt-3 border-top">System Notice</h5>
                    <p class="small text-muted mb-0">
                        All access and activity are subject to system policies. For security concerns, please contact the administrator.
                    </p>
                </div>
            </div>
        </div>
    </div>
</div>